<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LokerTipeFragment">
    <ImageView
        android:id="@+id/blob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/blob"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lokertipe"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/blob"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <RelativeLayout
        android:id="@+id/card1"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:background="@drawable/rounded_orange"
        app:layout_constraintTop_toBottomOf="@+id/tx1"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/img_paruhwkt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/paruhwaktu"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tx_paruhwkt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paruhwkt"
            android:padding="6dp"
            android:background="@drawable/rounded_orange"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textAlignment="center"
            android:layout_below="@+id/img_paruhwkt"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card2"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:background="@drawable/rounded_orange"
        app:layout_constraintTop_toBottomOf="@+id/tx1"
        app:layout_constraintLeft_toRightOf="@+id/card1">

        <ImageView
            android:id="@+id/img_penuhwkt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/penuhwaktu"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tx_penuhwkt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/penuhhwkt"
            android:textStyle="bold"
            android:background="@drawable/rounded_orange"
            android:textColor="@color/primary"
            android:textAlignment="center"
            android:padding="6dp"
            android:layout_below="@+id/img_penuhwkt"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card3"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:background="@drawable/rounded_orange"
        app:layout_constraintTop_toBottomOf="@+id/card1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/kontrak"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/kontrak"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tx_kontrak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kontrak"
            android:textStyle="bold"
            android:background="@drawable/rounded_orange"
            android:textColor="@color/primary"
            android:textAlignment="center"
            android:padding="6dp"
            android:layout_below="@+id/kontrak"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>