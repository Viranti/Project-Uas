<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TambahPelatihanJahitFragment">

    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/jdl_pelatihan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Judul Pelatihan"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/edt_jdlpelatihanjahit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Masukkan judul pelatihan"
        android:textSize="16sp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:background="@drawable/rounded"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/jdl_pelatihan"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/dtl_pelatihan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Detil Pelatihan"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_jdlpelatihanjahit"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/edt_detilpelatihanjahit"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Masukkan detil Pelatihan"
        android:textSize="16sp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:background="@drawable/rounded"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/dtl_pelatihan"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tgl_uploadpelatihan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Tanggal"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_detilpelatihanjahit"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/edt_tgluploadjahit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Masukkan tanggal upload"
        android:textSize="16sp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:background="@drawable/rounded"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tgl_uploadpelatihan"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btn_tambahpelatihanjahit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/tambah"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/primary"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edt_tgluploadjahit"
        app:layout_constraintLeft_toLeftOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>