<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    tools:context=".PelatihanListFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/graysmooth"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/ic_back"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/welcomepelatihanlist"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="18dp"
            android:text="@string/desckelasmerias"
            android:layout_below="@+id/tx1"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card1"
        android:layout_width="164dp"
        android:layout_height="90dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/white"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:layout_constraintLeft_toLeftOf="parent"
        >
<!--        <ImageView-->
<!--            android:id="@+id/img_it"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_marginTop="12dp"-->
<!--            android:src="@drawable/video1"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            />-->
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card2"
        android:layout_width="164dp"
        android:layout_height="90dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/white"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:layout_constraintLeft_toRightOf="@+id/card1"
        >
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card3"
        android:layout_width="164dp"
        android:layout_height="90dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/white"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/card1"
        app:layout_constraintLeft_toLeftOf="parent"
        >

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card4"
        android:layout_width="164dp"
        android:layout_height="90dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/white"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@+id/card2"
        app:layout_constraintLeft_toRightOf="@+id/card3"
        >
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>