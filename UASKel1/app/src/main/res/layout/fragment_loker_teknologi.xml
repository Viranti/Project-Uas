<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LokerTeknologiFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <RelativeLayout
        android:id="@+id/dataloker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="24dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/primary"
        >
        <TextView
            android:id="@+id/ou_jdlloker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="haiii"/>
        <TextView
            android:id="@+id/ou_dtlloker"
            android:layout_width="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_height="wrap_content"
            android:text="haaa"
            android:layout_toEndOf="@id/ou_jdlloker"/>
        <TextView
            android:id="@+id/ou_tglloker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="tes"
            android:layout_toEndOf="@id/ou_dtlloker"/>
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tambahloker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="@string/tambah"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textAlignment="textStart"
        app:icon="@drawable/ic_plus"
        app:iconSize="32dp"
        app:iconTint="@color/black"
        app:iconGravity="end"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dataloker"
        app:layout_constraintLeft_toLeftOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>