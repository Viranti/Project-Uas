<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="32dp"
    android:paddingVertical="32dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text1"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text5"
            android:layout_below="@+id/text1"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card2"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/graysmooth"
        android:background="@drawable/rounded"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/card1"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageView
            android:id="@+id/ic_book"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_book"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic_book"
            android:layout_centerVertical="true"
            android:text="@string/pelatihan"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>
    <!--    card2-->
    <RelativeLayout
        android:id="@+id/card3"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/graysmooth"
        android:background="@drawable/rounded"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/card2"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageView
            android:id="@+id/ic_lampu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_lamp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic_lampu"
            android:layout_centerVertical="true"
            android:text="@string/pengajuan"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>
    <!--    card 3-->
    <RelativeLayout
        android:id="@+id/card4"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/graysmooth"
        android:background="@drawable/rounded"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/card3"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageView
            android:id="@+id/ic_lowkerja"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_lowkerja"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic_lowkerja"
            android:layout_centerVertical="true"
            android:text="@string/lowongan"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>
    <!--    card 4-->
    <RelativeLayout
        android:id="@+id/card5"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/graysmooth"
        android:background="@drawable/rounded"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/card4"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageView
            android:id="@+id/ic_informasi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_informasi"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic_informasi"
            android:layout_centerVertical="true"
            android:text="@string/informasi"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card6"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/graysmooth"
        android:background="@drawable/rounded"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/card5"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageView
            android:id="@+id/ic_akunadmn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_akun"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic_akunadmn"
            android:layout_centerVertical="true"
            android:text="Data User Admin"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>